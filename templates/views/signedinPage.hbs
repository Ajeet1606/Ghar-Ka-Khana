<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/bootstrap.min.css">
  <link rel="stylesheet" href="../css/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <title>DashBoard</title>
</head>

<body class="d-flex flex-column min-vh-100">

  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><b>Ghar Ka Khana</b></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          
        </ul>

        <form method="post" action="/logout">
          <button type="submit" class="btn bg-warning mx-2">Log Out</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- main  -->
  <div class="container-fluid">

    <div class="row d-flex min-vh-100">
      <div class="col-3 p-3 fixed bg-dark text-white">
        <span class="fs-4 font-monospace">{{user.fullName}}</span>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="#" class="nav-link active text-white" id="home-tab" data-bs-toggle="pill" data-bs-target="#home"
              type="button" role="tab" aria-controls="home" aria-selected="true">
              <i class="me-2 fa fa-home"></i>
              Home
            </a>
          </li>
          <li>
            <a href="#" class="nav-link text-white" id="orders-tab" data-bs-toggle="pill" data-bs-target="#orders"
              type="button" role="tab" aria-controls="orders" aria-selected="false">
              <i class="me-2 fa fa-table"></i>
              Orders
            </a>
          </li>
          <li>
            <a href="#" class="nav-link text-white" id="delivery-partners-tab" data-bs-toggle="pill"
              data-bs-target="#delivery-partners" type="button" role="tab" aria-controls="delivery-partners"
              aria-selected="false">
              <i class="me-2 bi bi-truck"></i>
              Get Delivery Partners
            </a>
          </li>

        </ul>
      </div>

      <div class="col-9">
        <div class="tab-content" id="v-pills-tabContent">
          <!-- Home -->
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
            <div class="container my-5">
              <div class="font-monospace">
                <h4><b>YOUR KITCHEN DETAILS:</b></h4>
              </div>

              <div class="content">
                <form>
                  <div class="row g-3 d-flex justify-content-around">
                    <div class="col-6">
                      <label for="fullName" class="form-label">Full name</label>
                      <input type="text" class="form-control" id="fullName" name="fullName" value="{{user.fullName}}"
                        readonly>
                    </div>

                    <div class="col-4">
                      <label for="email" class="form-label">Email</label>
                      <input type="phone" class="form-control" id="email" name="email" value="{{user.email}}" readonly>
                    </div>

                    <div class="col-6">
                      <label for="city" class="form-label">City</label>
                      <input type="text" class="form-control" name="city" value="{{user.city}}" readonly>
                    </div>
                    <div class="col-4">
                      <label for="charge" class="form-label">Charge</label>
                      <input type="text" class="form-control" name="charge" value="{{user.charge}}" readonly>
                    </div>

                    <div class="col-11 table-responsive">
                      <table class="table table-bordered border border-dark rounded table-warning">
                        <thead>
                          <tr>
                            <th scope="col">Days</th>
                            <th scope="col">Item1</th>
                            <th scope="col">Item2</th>
                            <th scope="col">Item3</th>
                            <th scope="col">Item4</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <th scope="row">Sunday</th>
                            <td><input type="text" value="{{user.sunday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.sunday.[1]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.sunday.[2]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.sunday.[3]}}" readonly size="7"></td>
                          </tr>
                          <tr>
                            <th scope="row">Monday</th>
                            <td><input type="text" value="{{user.monday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.monday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.monday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.monday.[0]}}" readonly size="7"></td>
                          </tr>
                          <tr>
                            <th scope="row">Tuesday</th>
                            <td><input type="text" value="{{user.tuesday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.tuesday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.tuesday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.tuesday.[0]}}" readonly size="7"></td>
                          </tr>
                          <tr>
                            <th scope="row">Wednesday</th>
                            <td><input type="text" value="{{user.wednesday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.wednesday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.wednesday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.wednesday.[0]}}" readonly size="7"></td>
                          </tr>
                          <tr>
                            <th scope="row">Thursday</th>
                            <td><input type="text" value="{{user.thursday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.thursday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.thursday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.thursday.[0]}}" readonly size="7"></td>
                          </tr>
                          <tr>
                            <th scope="row">Friday</th>
                            <td><input type="text" value="{{user.friday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.friday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.friday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.friday.[0]}}" readonly size="7"></td>
                          </tr>
                          <tr>
                            <th scope="row">Saturday</th>
                            <td><input type="text" value="{{user.saturday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.saturday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.saturday.[0]}}" readonly size="7"></td>
                            <td><input type="text" value="{{user.saturday.[0]}}" readonly size="7"></td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab" tabindex="0">
            <div class="container mt-5 text-center">
              <h3>All Orders Recieved</h3>
            </div>
            <div class="container mt-5">
              <div class="d-flex justify-content-center row">
                <div class="col-md-10">
                  <div class="table-container">
                    <table class="table table-bordered rounded">
                      <thead>
                        <tr>
                          <th>Order #</th>
                          <th>Customers name</th>
                          <th>Status</th>
                          <th>Total Charge</th>
                          <th>Duration</th>
                          <th>Order Date</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody class="table-body">
                        <tr class="cell-1">
                          <td>4.</td>
                          <td>Mike</td>
