    {{!-- main body --}}
    <div class="container my-3">
        <form>
            <div class=" row d-flex justify-content-center">
                {{!-- name --}}
                <div class="form-outline mb-4 col-3">
                    <label class="form-label" for="fullName">Full Name</label>
                    <input type="text" id="fullName" value="{{user.fullName}}" class="form-control" readonly />
                </div>
                <!-- Email input -->
                <div class="form-outline mb-4 col-3">
                    <label class="form-label" for="email">Email address</label>
                    <input type="email" id="email" value="{{user.email}}" class="form-control" readonly />
                </div>
            </div>
        </form>
        <div class="d-flex justify-content-center">
            <a href="/kitchen_list" type="button" class="btn btn-primary">Explore Kitchens In Your City</a>
        </div>
    </div>

    <div class="container my-2 text-center">
        <h3>Orders History</h3>
    </div>
    <div class="container my-2">
        <div class="d-flex justify-content-center row">
            <div class="col-md-10">
                <div class="table-container">
                    <table class="table table-bordered rounded">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Kitchen name</th>
                                <th>Status</th>
                                <th>Total Charge</th>
                                <th>Duration</th>
                                <th>Order Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="table-body">
                            <tr class="cell-1">
                                <td>1.</td>
                                <td>Kanha Shyam</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>6000Rs.</td>
                                <td>30 Days</td>
                                <td>22 May</td>
                                <td><i class="fa fa-ellipsis-h text-black-50"></i></td>
                            </tr>
                            <tr class="cell-1">
                                <td>2.</td>
                                <td>Radha Rasoi</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>6300Rs.</td>
                                <td>45Days</td>
                                <td>1 May</td>
                                <td><i class="fa fa-ellipsis-h text-black-50"></i></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


